<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterActivity"
    android:orientation="vertical"
    android:background="@color/light"
    android:paddingTop="80dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qualityDisplay"
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edit_text_login"
                android:gravity="center"
                android:text="Water Quality: Good"
                android:textSize="20sp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:text="Water temperature = "
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/custom_edit_text_login"
                android:layout_marginRight="2dp"/>

            <TextView
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:text="pH = "
                android:gravity="center"
                android:textSize="20sp"
                android:background="@drawable/custom_edit_text_login"/>

            <TextView
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edit_text_login"
                android:gravity="center"
                android:text="Turbidity = "
                android:textSize="20sp"
                android:layout_marginRight="2dp"/>

            <TextView
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edit_text_login"
                android:gravity="center"
                android:text="TDS = "
                android:textSize="20sp"
                android:layout_marginRight="2dp"/>

        </LinearLayout>

    </HorizontalScrollView>



    <TextView
        android:id="@+id/detailedReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Detailed Report"
        android:onClick="detailedReport"/>

    <Spinner
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/imageGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:contentDescription="Source :Google"
        app:srcCompat="@drawable/graph" />


</LinearLayout>